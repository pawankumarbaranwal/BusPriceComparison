<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pawan.buspricecomparison" >

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.pawan.buspricecomparison.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SearchBuses"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_search_buses" >
        </activity>
        <activity
            android:name=".SourceCities"
            android:label="@string/title_source_city" >
        </activity>
        <activity
            android:name=".DestinationCities"
            android:label="@string/title_destination_city" >
        </activity>
        <activity
            android:name=".CalDroid"
            android:label="@string/date_of_journey" >
        </activity>
        <activity
            android:name=".BusesWithFares"
            android:label="@string/title_activity_buses_with_fares">
        </activity>
    </application>

</manifest>
